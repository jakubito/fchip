{
  "name": "chip8-core",
  "private": true,
  "version": "0.0.1",
  "description": "CHIP-8 core",
  "author": "Jakub Dobes <dobes.jakub@gmail.com>",
  "license": "ISC",
  "scripts": {
    "postinstall": "npm run build",
    "build:debug": "asc assembly/index.ts --target debug",
    "postbuild:debug": "cp build/debug.js build/core.js && cp build/debug.d.ts build/core.d.ts",
    "build:release": "asc assembly/index.ts --target release",
    "build": "npm run build:debug && npm run build:release",
    "serve": "npx serve build -p 8001 --cors",
    "get:version": "echo $npm_package_version"
  },
  "devDependencies": {
    "assemblyscript": "^0.20.6"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./build/release.js",
      "types": "./build/release.d.ts"
    }
  }
}
